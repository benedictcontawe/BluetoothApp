<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.benedict.bluetootharduino.MainActivity">

    <TextView
        android:id="@+id/TextViewMacAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MAC Address" />

    <ToggleButton
        android:id="@+id/toggle_connect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnBluetoothFindMacAddress"
        android:layout_centerHorizontal="true"
        android:textOff="Connect"
        android:textOn="Disconnect" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30dp"
        android:text="Controller" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="#87ceeb"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

        <ToggleButton
            android:drawableLeft="@mipmap/ic_key"
            android:id="@+id/toggle_Key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textOff="Lock"
            android:textOn="Unlock" />

            </LinearLayout>

        </ScrollView>

    <TextView
        android:id="@+id/TextViewConnectionStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Connection Status" />

</LinearLayout>
